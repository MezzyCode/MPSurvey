                                    <div class="col-md-1"><b>C9</b></div>
                                    <div class="col-md-11">
                                        <div class="form-group">
                                            <label asp-for="C9" class="control-label">Apakah Pendidikan Terakhir Ibu/Bapak?</label>
                                            <select asp-for="C9" asp-items="new SelectList(Model.ListPendidikan, nameof(JsonHelperTable.Name), nameof(JsonHelperTable.Value))" class="form-control">
                                                <option value="">-- Select --</option>
                                            </select>
                                            <span asp-validation-for="C9" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="row">
                                    <div class="col-md-1"><b>C10</b></div>
                                    <div class="col-md-11">
                                        <div class="form-group">
