@using Model.JsonModels.Setting;
@model Model.JsonModels.Master.JsonAnswer
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<style>
    /* Define custom styles for the ordered list */
    .custom-ol {
        counter-reset: custom-counter;
        list-style-type: none;
    }

    /* Style for list items */
    .custom-li {
        counter-increment: custom-counter;
        margin-bottom: 10px;
    }

        /* Style for list item markers */
        .custom-li::before {
            content: counter(custom-counter) ".";
            margin-right: 5px;
            font-weight: bold;
            color: #007BFF; /* Change color as desired */
        }
</style>

<div class="text-sm">
    <div class="Isi Data">
        <h1>Isi Data</h1>
        <nav>
            <ol class="breadcrumb">
