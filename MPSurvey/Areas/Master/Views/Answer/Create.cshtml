                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Nama_Kk" class="control-label font-weight-bold"></label>
                                                <input type="number" asp-for="Nama_Kk" class="form-control" />
                                                <span asp-validation-for="Nama_Kk" class="text-danger"></span>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Alamat" class="control-label font-weight-bold"></label>
                                                <input type="text" asp-for="Alamat" class="form-control" />
