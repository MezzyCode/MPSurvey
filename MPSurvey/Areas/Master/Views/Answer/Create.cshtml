                                </div>

                            </div>
                            <div class="card-footer">

                                <input type="submit" value="Submit" class="btn btn-success" />
                                &nbsp;
                                <a asp-action="Index" class="btn btn-danger">Cancel</a>

                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <!-- new vendor form -->

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@section myScripts{
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script>
        $(document).ready(function () {

            $("form").submit(function () {

                ShowLoading();

            });

            var kelurahanList = @Html.Raw(Json.Serialize(Model.ListKelurahan));

            $("#kecamatanSelect").on("click", function () {
                var selectedKecamatan = $(this).val();
                console.log(selectedKecamatan);

                $("#kelurahanSelect").empty();

                $("#kelurahanSelect").append($("<option>", {
                    value: "",
                    text: "--Select --"
                }));

                $.each(kelurahanList, function (index, item) {
                    if (item.description == selectedKecamatan) {
                        $("#kelurahanSelect").append($("<option>", {
                            value: item.value,
                            text: item.value
                        }));

                    }
                });
            });



        @if (TempData["notification"] != null)
        {
            @Html.Raw(TempData["notification"])
        }
                                                                                                });


    </script>

}