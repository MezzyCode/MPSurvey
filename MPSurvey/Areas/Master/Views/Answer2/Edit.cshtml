@using Model.JsonModels.Setting;
@model Model.JsonModels.Master.JsonAnswer2
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/AdminLTE/_Layout.cshtml";
}

<style>
    /* Define custom styles for the ordered list */

    .custom-ol {
        counter-reset: custom-counter;
        list-style-type: none;
    }

    /* Style for list items */
    .custom-li {
        counter-increment: custom-counter;
        margin-bottom: 10px;
    }

        /* Style for list item markers */
        .custom-li::before {
            content: counter(custom-counter) ".";
            margin-right: 5px;
            font-weight: bold;
            color: #007BFF; /* Change color as desired */
        }
</style>

<div class="text-sm">
    <div class="Isi Data">
        <h1>Isi Data</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item">Home</li>
                <li class="breadcrumb-item">Jawaban</li>
                <li class="breadcrumb-item active">Edit Data</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <!-- new vendor form -->
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row center" style="float: none; margin: 0 auto;">
                    <div class="col-md-12">
                        <div class="card card-warning">
                            <div class="card-header">
                                <h3 class="card-title">ISI DATA</h3>
                            </div>
                            <div class="card-body">

                                <div class="row">
                                    <div class="row">

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Nama" class="control-label font-weight-bold"></label><span class="text-danger">*</span>
                                                <input type="text" asp-for="Nama" class="form-control" />
                                                <span asp-validation-for="Nama" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="NoTelp" class="control-label font-weight-bold"></label>
                                                <input type="number" asp-for="NoTelp" class="form-control" />
                                                <span asp-validation-for="NoTelp" class="text-danger"></span>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="Usia" class="control-label font-weight-bold"></label>
                                                <input type="number" asp-for="Usia" class="form-control" />
                                                <span asp-validation-for="Usia" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label asp-for="Alamat" class="control-label font-weight-bold"></label><span class="text-danger">*</span>
                                                <input type="text" asp-for="Alamat" class="form-control" />
                                                <span asp-validation-for="Alamat" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-1">
                                            <div class="form-group">
                                                <label asp-for="Rt" class="control-label font-weight-bold"></label>
                                                <input type="number" asp-for="Rt" class="form-control" />
                                                <span asp-validation-for="Rt" class="text-danger"></span>
                                            </div>
                                        </div>

                                        <div class="col-md-1">
                                            <div class="form-group">
                                                <label asp-for="Rw" class="control-label font-weight-bold"></label>
                                                <input type="number" asp-for="Rw" class="form-control" />
                                                <span asp-validation-for="Rw" class="text-danger"></span>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="row">
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="Kecamatan" class="control-label font-weight-bold"></label>
                                                <select asp-for="Kecamatan" asp-items="new SelectList(Model.ListKecamatan, nameof(JsonHelperTable.Name), nameof(JsonHelperTable.Name))" id="kecamatanSelect" class="form-control">
                                                    <option value="">-- Select --</option>
                                                </select>
                                                <span asp-validation-for="Kecamatan" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label asp-for="Kelurahan" class="control-label font-weight-bold"></label>
                                                <select asp-for="Kelurahan" asp-items="new SelectList(Model.ListKelurahan, nameof(JsonHelperTable.Name), nameof(JsonHelperTable.Name))" id="kelurahanSelect" class="form-control">
                                                    <option value="">-- Select --</option>
                                                </select>
                                                <span asp-validation-for="Kelurahan" class="text-danger"></span>
                                            </div>
                                        </div>

                                    </div>
                                </div>

                                <br />
                                <hr />
                                <br />

                                <div class="row">
                                    <div class="col-md-1"><b>C1</b><span class="text-danger">*</span></div>
                                    <div class="col-md-11">
                                        <div class="form-group">
                                            <label asp-for="C1" class="control-label">Apakah Bapak/Ibu/Sdr/i telah terdaftar sebagai pemilih pada Pemilu 14 Februari 2024?</label>
                                            @foreach (var option in Model.List2Choice)
                                            {
                                                <div class="form-check">
                                                    <input asp-for="C1" class="form-check-input" type="radio" value="@option.Value" id="@($"C1option{option.Value}")" />
                                                    <label class="form-check-label" for="@($"C1option{option.Value}")">@option.Value</label>
                                                </div>
                                            }
                                            <span asp-validation-for="C1" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="row">
                                    <div class="col-md-1"><b>C2</b></div>
                                    <div class="col-md-11">
                                        <div class="form-group">
                                            <label asp-for="C2" class="control-label">Apakah Bapak/Ibu/Sdr/i mengenal Masinton Pasaribu?</label>
                                            @foreach (var option in Model.List2Choice)
                                            {
                                                <div class="form-check">
                                                    <input asp-for="C2" class="form-check-input" type="radio" value="@option.Value" id="@($"C2option{option.Value}")" />
                                                    <label class="form-check-label" for="@($"C2option{option.Value}")">@option.Value</label>
                                                </div>
                                            }
                                            <span asp-validation-for="C2" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="row">
                                    <div class="col-md-1"><b>C3</b><span class="text-danger">*</span></div>
                                    <div class="col-md-11">
                                        <div class="form-group">
                                            <label asp-for="C3" class="control-label">Apakah Bapak/Ibu/Sdr/i menegtahui Masinton Pasaribu dicalonkan kembali oleh Partai PDI Perjuangan sebagai Caleg DPR RI?</label>
                                            @foreach (var option in Model.List2Choice)
                                            {
                                                <div class="form-check">
                                                    <input asp-for="C3" class="form-check-input" type="radio" value="@option.Value" id="@($"C4option{option.Value}")" />
                                                    <label class="form-check-label" for="@($"C4option{option.Value}")">@option.Value</label>
                                                </div>
                                            }
                                            <span asp-validation-for="C3" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                                <br />

                                <div class="row">
                                    <div class="col-md-1"><b>C4</b><span class="text-danger">*</span></div>
                                    <div class="col-md-11">
                                        <div class="form-group">
                                            <label asp-for="C4" class="control-label">Bersediakah Bapak/Ibu/Sdr/i memilih Caleg DPR RI, nomor 7 Masinton Pasaribu, S.H. dari Partai PDI Perjuangan?</label>
                                            @foreach (var option in Model.List3Choice)
                                            {
                                                <div class="form-check">
                                                    <input asp-for="C4" class="form-check-input" type="radio" value="@option.Value" id="@($"C4option{option.Value}")" />
                                                    <label class="form-check-label" for="@($"C4option{option.Value}")">@option.Value</label>
                                                </div>
                                            }
                                            <span asp-validation-for="C4" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div class="card-footer">

                                <input type="submit" value="Submit" class="btn btn-success" />
                                &nbsp;
                                <a asp-action="Index" class="btn btn-danger">Cancel</a>

                            </div>
                        </div>
                    </div>
                </div>
            </form>
            <!-- new vendor form -->

        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>

@section myScripts{
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <script>
        $(document).ready(function () {

            $("form").submit(function () {

                ShowLoading();

            });

            var kelurahanList = @Html.Raw(Json.Serialize(Model.ListKelurahan));

            $("#kecamatanSelect").on("click", function () {
                var selectedKecamatan = $(this).val();
                console.log(selectedKecamatan);

                $("#kelurahanSelect").empty();

                $("#kelurahanSelect").append($("<option>", {
                    value: "",
                    text: "--Select --"
                }));

                $.each(kelurahanList, function (index, item) {
                    if (item.description == selectedKecamatan) {
                        $("#kelurahanSelect").append($("<option>", {
                            value: item.value,
                            text: item.value
                        }));

                    }
                });
            });



        @if (TempData["notification"] != null)
        {
            @Html.Raw(TempData["notification"])
        }
                                                                                                                });


    </script>

}